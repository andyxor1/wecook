<% include ../includes/header %>
<% include ../includes/nav %>

<div class="col-sm-6 login-card ">
  <div class="card login">
    <div class="card-body">
      <h3 class="card-title text-primary mb-4">Login</h3>
      <form>
        <div class="form-group row">

          <div class="col-md-4">
            <span> <i class="icon fas fa-envelope mr-3"></i>  </span>
            <label for="inputEmail3" class="col-form-label"> Email  </label>
          </div>
          <div class="col-md-8">
            <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4">
            <span> <i class="icon fas fa-key mr-3"></i> </span>
            <label for="inputPassword3" class="col-form-label">Password</label>
          </div>

          <div class="col-md-8">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
          </div>
        </div>

        <div class="form-group row float-right">
          <div class="col-sm-12">
            <a id="loginButton" href="/dashboard" class="btn btn-primary float-right ml-2">Sign In</a>
            <button type="submit" class="btn btn-warning">Forgot Password</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../includes/footer %>
