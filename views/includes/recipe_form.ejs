<div class="row">
  <div class="col-md-12">
    <div class="card questionbox-card text-dark">
      <div class="card-body">
        <h1 class="card-title text-info"> Share your recipe ...</h1>
        <h6 class="card-subtitle mb-2 text-muted mb-4 font-italic"> your recipe could help a hungry student...</h6>
        <!--<form> action="addRecipe.js" method="POST"> -->
            <form id="recipeForm" action="/add-recipe" method="POST">
          <div class="form-group">
            <span> <i class="icon fas fa-feather-alt mr-3"></i> </span>
            <label for="recipeTitle">Title</label>
            <input type="text" class="mt-2 form-control " name="title" id="recipeTitle" aria-describedby="emailHelp"
              placeholder="Enter a unique title for your recipe">
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-4">
                <span> <i class="icon far fa-clock mr-3"></i> </span>
                <label for="prepTime">Preperation Time</label>
                <input type="number" class="mt-2 form-control " name="prep_time" id="prepTime" aria-describedby="emailHelp">
              </div>
              <div class="col-md-4">
                <span> <i class="icon fas fa-clock mr-3"></i> </span>
                <label for="cookTime">Cooking Time</label>
                <input type="number" class="mt-2 form-control " name="cook_time" id="cookTime" aria-describedby="emailHelp">
              </div>
              <div class="col-md-4">
                <span> <i class="icon fas fa-users mr-3"></i> </span>
                <label for="numServings">Number of Servings</label>
                <input type="number" class="mt-2 form-control " name="numServings" id="numServings" aria-describedby="emailHelp">
              </div>
            </div>
          </div>

          <div class="form-group">
            <span> <i class="icon fas fa-info-circle mr-3"></i> </span>
            <label for="recipeDescription">Descriptions</label>
            <textarea class="mt-2 form-control " name="description" id="recipeDescription" rows="5" placeholder="Enter a description..."></textarea>
          </div>

          <div class="form-group">
            <label for="instructionsList"><i class="icon fas fa-chalkboard-teacher mr-3"></i> Instructions</label>
            <div class="mt-2" id="instructionsList">
              <!-- to be removed later-->
              <input type="text" class="mb-2 form-control " name="instructions" placeholder="Instruction 1">
              <input type="text" class="mb-2 form-control " name="instructions" placeholder="Instruction 2">
              <input type="text" class="mb-2 form-control " name="instructions" placeholder="Instruction 3">
              <input type="text" class="mb-2 form-control " name="instructions" placeholder="Instruction 4">
              <input type="text" class="mb-2 form-control " name="instructions" placeholder="Instruction 5">
            </div>
            <input type="button" value="Add another Instruction" onclick="addInstructionField();" ;>
          </div>

          <div class="form-group">

            <label for="ingredientsList"><i class="icon fas fa-mortar-pestle mr-3"></i> Ingredients</label>
            <div class="mt-2" id="ingredientsList">
              <input type="text" class="mb-2 form-control " name="ingredients" placeholder="Ingredient 1">
              <input type="text" class="mb-2 form-control " name="ingredients" placeholder="Ingredient 2">
              <input type="text" class="mb-2 form-control " name="ingredients" placeholder="Ingredient 3">
              <input type="text" class="mb-2 form-control " name="ingredients" placeholder="Ingredient 4">
              <input type="text" class="mb-2 form-control " name="ingredients" placeholder="Ingredient 5">
            </div>
            <input type="button" value="Add another Ingredient" onclick="addIngredientField();" ;>
          </div>

          <div class="form-group">
            <label for="tagsList"> <i class="icon fas fa-tags mr-3"></i> Select Tags</label>
            <div class="mt-2 mb-2 d-flex flex-wrap" id="tagList">
              <% recipe_tags.forEach(function(tag) { %>
              <a href="#" class="mr-2 mb-2 px-2 tag text-lowercase">
                <%= tag %></a>
              <% }); %>
            </div>
            <input type="text" class="form-control " id="searchTags" aria-describedby="emailHelp" placeholder="Add a tag">

          </div>

          <div class="row mt-5">
            <div class="col-md-6">
              <a href="/dashboard" class="btn btn-outline-dark btn-block btn-lg float-right"> <i class="icon fas fa-ban mr-3"></i>
                Cancel</a>
            </div>
            <div class="col-md-6">
              <button type="submit" class="btn-lg btn-block btn-info float-right"> <span> <i class="icon fas fa-paper-plane mr-3"></i>
                </span> Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>